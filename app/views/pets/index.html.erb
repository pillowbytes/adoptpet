<div class="container">
  <div class="row align-items-center mb-4">
    <div class="col">
      <h1 class="text-primary">Ache o seu pet ğŸ¾</h1>
    </div>
    <div class="col text-end">
      <%= link_to "Adicionar Bichinho", new_pet_path, class: "btn btn-primary-orange" %>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4 align-items-stretch">
    <% @pets.each do |pet| %>
      <div class="col d-flex justify-content-center">
        <div class="pet-card">
          <% if pet.image_url %>
            <%= image_tag pet.image_url, alt: pet.name, class: "pet-image" %>
          <% end %>
          <div class="pet-info">
            <div class="pet-name"><strong><%= pet.name %></strong></div>
            <div class="pet-gender"><%= pet.gender %></div>
            <%= link_to "Ver Detalhes", pet_path(pet), class: "details-button" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
