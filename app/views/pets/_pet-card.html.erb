<div class="pet-card">
  <img src="<%= image_url %>" alt="<%= name %>" class="pet-image">

  <div class="pet-info">
    <div class="pet-name">
      <%= name %>
    </div>
    <div class="pet-gender">
      <%= gender %>
    </div>
    <%= link_to "Ver Detalhes", details_path, class: "details-button" %>
  </div>
</div>
