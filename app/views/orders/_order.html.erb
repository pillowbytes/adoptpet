<% if @order.errors.any? %>
  <div class="alert alert-danger">
    <h4>Erros ao enviar o formulário:</h4>
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-container">
  <%= simple_form_for @order do |f| %>
    <%= f.hidden_field :pet_id, value: @pet.id %>

    <div class="form-group">
      <%= f.label :children_number, "Quantas crianças moram na sua casa?" %>
      <%= f.number_field :children_number, min: 0, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :family_agreement, "Todos que moram com você estão de acordo com a adoção?" %>
      <div class="radio-group">
        <%= f.label :family_agreement_true do %>
          <%= f.radio_button :family_agreement, true %> Sim
        <% end %>
        <%= f.label :family_agreement_false do %>
          <%= f.radio_button :family_agreement, false %> Não
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :other_pets_in_house, "Tem outros pets na sua casa?" %>
      <div class="radio-group">
        <%= f.label :other_pets_in_house_true do %>
          <%= f.radio_button :other_pets_in_house, true %> Sim
        <% end %>
        <%= f.label :other_pets_in_house_false do %>
          <%= f.radio_button :other_pets_in_house, false %> Não
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :responsible_for_pet, "O responsável pelo Pet será você ou outra pessoa?" %>
      <div class="radio-group">
        <%= f.label :responsible_for_pet_eu do %>
          <%= f.radio_button :responsible_for_pet, "Eu" %> Eu
        <% end %>
        <%= f.label :responsible_for_pet_outra do %>
          <%= f.radio_button :responsible_for_pet, "Outra pessoa" %> Outra pessoa
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :house_type, "Você mora em casa ou apartamento?" %>
      <%= f.select :house_type, ["Casa", "Apartamento"], { prompt: "Selecione" }, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :house_description, "Informação descritiva sobre sua casa (tela, portão,...)" %>
      <%= f.text_area :house_description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Enviar", class: "btn-primary-orange" %>
    </div>
  <% end %>
</div>
