<div class="container">
  <div class="row">
    <div class="col text-center mt-5">
    <h1>Adoções</h1>
    <p>Confira o status das suas adoções</p>
    </div>
  </div>
  </div>

<div class="form-container text-center">
  <% current_user.orders.each.each do |order| %>
  <div class="m-5">
  <h2>Adoção #452<%= order.id %></h2>
  <p><%= order.pet.name %> - Adotado em <%= order.created_at.strftime("%d/%m/%Y") %></p>
  <%= link_to "Ver Mais", order_path(order), class: "btn btn-primary-orange"%>
  </div>
  <% end %>
</div>
